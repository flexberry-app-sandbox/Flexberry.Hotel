<h3 class="ui header">{{t "forms.i-i-s-hotel-employee-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.firstName
      class=(if (v-get validationModel "firstName" "isInvalid") "error")
      label=(t "forms.i-i-s-hotel-employee-e.firstName-caption")
      data-test-i-i-s-hotel-employee-e-firstName=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "firstName" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.lastName
      class=(if (v-get validationModel "lastName" "isInvalid") "error")
      label=(t "forms.i-i-s-hotel-employee-e.lastName-caption")
      data-test-i-i-s-hotel-employee-e-lastName=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "lastName" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.middleName
      class=(if (v-get validationModel "middleName" "isInvalid") "error")
      label=(t "forms.i-i-s-hotel-employee-e.middleName-caption")
      data-test-i-i-s-hotel-employee-e-middleName=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "middleName" "message")}}
  </div>
  <div class="field" data-test-i-i-s-hotel-employee-e-sex="true">
    <label>{{t "forms.i-i-s-hotel-employee-e.sex-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-hotel-sex")
      value=model.sex
      class=(if (v-get validationModel "sex" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "sex" "message")}}
  </div>
</form>
