<h3 class="ui header">{{t "forms.i-i-s-hotel-visit-edit.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-visit-edit.startVisitDate-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.startVisitDate
      class=(if (v-get validationModel "startVisitDate" "isInvalid") "error")
      data-test-i-i-s-hotel-visit-edit-startVisitDate=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "startVisitDate" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-visit-edit.endVisitdate-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.endVisitdate
      class=(if (v-get validationModel "endVisitdate" "isInvalid") "error")
      data-test-i-i-s-hotel-visit-edit-endVisitdate=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "endVisitdate" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-visit-edit.person-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.person
      displayAttributeName="fullName"
      autocomplete=true
      relationName="person"
      projection="PersonL"
      title=(t "forms.i-i-s-hotel-visit-edit.person-caption")
      readonly=readonly
      componentName="personLookup"
      class=(if (v-get validationModel "person" "isInvalid") "error")
      data-test-i-i-s-hotel-visit-edit-person=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "person" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-hotel-visit-edit.room-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.room
      displayAttributeName="number"
      autocomplete=true
      relationName="room"
      projection="RoomL"
      title=(t "forms.i-i-s-hotel-visit-edit.room-caption")
      readonly=readonly
      componentName="roomLookup"
      class=(if (v-get validationModel "room" "isInvalid") "error")
      data-test-i-i-s-hotel-visit-edit-room=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "room" "message")}}
  </div>
</form>
